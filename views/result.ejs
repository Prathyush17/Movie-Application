<%-include('./partials/header') %> 
<div class="container">
  <%if(moviesDump.Response==='False'){%>
  <h1>Movie not found.</h1>
  <%} else{%>
  <h1>Movies found</h1>
  <div class="row">
    <%moviesDump['Search'].forEach(function(movie){%>
    <div class="card" style="width: 18rem">
      <img src="<%=movie.Poster%>" alt="<%=movie.Title%>" />
      <div class="card-body">
        <h5 class="card-title"><%=movie.Title%></h5>
        <p class="card-text">
          Year <%=movie.Year%>
        </p>
        <a href="/result/<%=movie.imdbID%>" class="btn btn-primary">Know more</a>
      </div>
    </div>

    <%})%>
  </div>
  <%}%>
</div>
<%-include('./partials/footer') %> 